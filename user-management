#switch user
	su - username 

#add user
	adduser username (adds user)

#set password for user
	passwd "username"

#set password for user without prompts
	echo thepassword | passwd "username" â€”stdin

#add user to wheel group
	gpasswd -a username wheel

#list of users
	/etc/passwd

#list of passwords
	/etc/shadow

#sudoers file
	/etc/sudoers

#list of all groups
	cut -d: -f1 /etc/group

#list members of certain group
	grep nginx /etc/group