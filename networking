initial set up

#show all networking interfaces on the box
ip link show 

#show information about network interface
ethtool "interface"

#display and edit current config
/etc/sysconfig/network-scripts/"interface name"

#DHCP configuration
TYPE=Ethernet
BOOTPROTO=dhcp / static
	IPADDR=192.168.2.155
	NETMASK=255.255.255.0
	GATEWAY=192.168.2.1
	DNS1=192.168.2.12
	DNS2=192.168.2.11
DEFROUTE=yes
PEERDNS=yes
PEERROUTES=yes
IPV4_FAILURE_FATAL=no
IPV6INIT=yes
IPV6_AUTOCONF=yes
IPV6_DEFROUTE=yes
IPV6_PEERDNS=yes
IPV6_PEERROUTES=yes
IPV6_FAILURE_FATAL=no
IPV6_ADDR_GEN_MODE=stable-privacy
NAME=enp0s3
UUID=802a6314-1fb5-4aa5-b3a1-0e26b355a921
DEVICE=enp0s3
	ONBOOT=yes

#DNS config
/etc/resolv.conf
nameserver 8.8.8.8
nameserver 8.8.4.4

#restart network services
service network restart / systemctl restart network.service
